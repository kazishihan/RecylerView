<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Expenses">

    <EditText
        android:id="@+id/expenseTypeTvId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Expense Type"
        android:imeOptions="actionNext"
        android:singleLine="true" />
    <EditText
        android:id="@+id/expenseAmountTvId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Expense Amount"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:singleLine="true" />
    <EditText
        android:id="@+id/expenseDateTvId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Expense Date"
        android:inputType="datetime"
        android:imeOptions="actionNext"
        android:singleLine="true" />
    <EditText
        android:id="@+id/expenseTimeTvId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Expense Type"
        android:inputType="time"
        android:imeOptions="actionDone"
        android:singleLine="true" />

    <Button
        android:textAllCaps="false"
        android:text="AddExpense"
        android:id="@+id/addExpenseBtnId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>